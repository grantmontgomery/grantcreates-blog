{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "noImplicitAny": true,
    "jsx": "react",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src"]
}
