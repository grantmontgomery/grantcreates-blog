        "outDir": "./dist/",
        "allowJs":true,
        "target":"es6",
        "module": "ES6",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "jsx": "react",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "lib":[
